<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <LinearLayout
            android:id="@+id/homeTeam_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/homeTeam_player_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="Totti"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/homeTeam_player_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:id="@+id/awayTeam_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/awayTeam_player_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/awayTeam_player_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="F. Anderson"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:layout_weight="3"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>